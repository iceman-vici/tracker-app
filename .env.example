# Time Doctor API Configuration (REQUIRED)
# Get these from https://webapi.timedoctor.com
TIME_DOCTOR_EMAIL=your-email@example.com
TIME_DOCTOR_PASSWORD=your-password
TIME_DOCTOR_TOTP=123456  # Optional: Only if 2FA is enabled on your account
TIME_DOCTOR_COMPANY_ID=68b1cb4ae86c38faec59b7f6  # Your company/workspace ID

# API Configuration
TIME_DOCTOR_API_URL=https://api2.timedoctor.com/api/1.0
TIME_DOCTOR_DEBUG=true

# Server Configuration
NODE_ENV=development
PORT=3000

# JWT Secrets (for local session management)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this

# Legacy Time Doctor API Credentials (deprecated - use above instead)
TIMEDOCTOR_EMAIL=your-timedoctor-email@example.com
TIMEDOCTOR_PASSWORD=your-timedoctor-password
TIMEDOCTOR_API_KEY=your-api-key-if-required

# CORS Settings
CORS_ORIGIN=http://localhost:3000
SOCKET_CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Timezone
TIMEZONE=UTC

# Cron Jobs (set to true to enable)
ENABLE_DAILY_REPORTS=false
ENABLE_WEEKLY_PAYROLL=false
ENABLE_HOURLY_BACKUP=false
ENABLE_SCREENSHOT_CLEANUP=false
ENABLE_MONTHLY_INVOICES=false

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@tracker-app.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=debug
DEBUG=false

# AWS S3 (optional, for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
S3_BUCKET_NAME=

# Stripe (optional, for payments)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Slack Integration (optional)
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_SIGNING_SECRET=

# GitHub Integration (optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
